<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Primary brand color. -->
    <style name="Theme.MovieHunter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primary_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieHunter</item>
        <item name="android:statusBarColor">#8F0505</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MovieHunter">
        <item name="android:windowBackground">@drawable/bg_degraded_reddark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom Themes -->

    <style name="Theme.MovieHunter.UserInteraction">
        <item name="android:statusBarColor">#8F0505</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitle" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SplashTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NormalTextSemiBold" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="NormalTextRegular" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="NormalTextMedium" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="NormalTextBold" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="NormalTextThin" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="BottomNavigationTab" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">10sp</item>
    </style>


</resources>